<form action="/pages" method="post">
  <p><label>Název stránky</label></p>
  <% if @title %>
    <p><%= @title %></p>
    <p><input type="hidden" name="title" value="<%= @title %>"></p>
  <% else %>
    <p><input type="text" name="title" value="<%= @title %>"></p>
  <% end %>

  <p><label>Text stránky:</label></p>
  <p><textarea name="body"><%= @body %></textarea></p>

  <p><input type="submit" value="Uložit" class="button"></p>
</form>
